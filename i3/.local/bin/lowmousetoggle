#!/bin/sh

TOGGLE=/tmp/lowmousetoggle

if [ ! -e $TOGGLE ]; then
    touch $TOGGLE
    xinput set-prop "Logitech USB Laser Mouse" "Coordinate Transformation Matrix" 0.25 0 0 0 0.25 0 0 0 1
else
    rm $TOGGLE
    xinput set-prop "Logitech USB Laser Mouse" "Coordinate Transformation Matrix" 1 0 0 0 1 0 0 0 1
fi


